<%- include('../includes/head') %>
  <link rel="stylesheet" href="/css/products.css">
  </head>
  <body>
    <%- include('../includes/header') %>
    <main>
        <h1>Admin Control Panel</h1>
        <a class="main-header__navlink <%- path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product</a>
        <h1>Available Stocks</h1>
        <% if (products.length>0) { %>
          <div class="product">
            <% for( let product of products ) { %>
              <div class="product-item">
                <img src="<%= product.image %>" alt="..." width="100" height="100">
                <h2 class="product-title"> <%= product.title %> <span class="product-quantity"> x<%= product.quantity %> </span> </h2>
                <p class="product-price">Rs. <%= product.price %>/-</p>
                <p class="product-description"><%= product.description %></p>
                <form action="/admin/edit-product/<%= product._id %>">
                  <button class="btn" type="submit">Edit</button>
                </form>
                <form action="/admin/delete-product/<%= product._id %>" method="delete">
                  <button class="btn" type="submit">Delete</button>
                </form>
              </div>
            <% } %>
          </div>
        <% } else { %>
          <h3 style="text-align: center">No products found!</h3>
        <% } %>
    </main>
<%- include('../includes/close') %>